<body>

    <div class="frame">
        Trang chủ/Sản phẩm
    </div>
    <div class="sapxep">
        Sắp xếp theo
        <select class="sapxep-select">
            <option>
                @Html.ActionLink("Giá: Thấp đến cao", "Product", "Product", new { sort = "price_asc" }, null)
            </option>
            <option>
                @Html.ActionLink("Giá: Cao đến thấp", "Product", "Product", new { sort = "price_des" }, null)
            </option>
        </select>
    </div>
    <section class="row">
        <div class="column left">
            @Html.Action("CategoryList", "Product")
            <div>
                <h3><span class="material-symbols-outlined" id="filter">filter_alt</span><u>Bộ lọc tìm kiếm</u></h3>
            </div>
            @Html.Action("BrandList", "Product")
            <div>
                <h3>Giá</h3>
                <div>
                    <input type="text" placeholder="TỪ" class="khoanggia" /><span> - </span>
                    <input type="text" placeholder="ĐẾN" class="khoanggia" />
                </div>
                <button class="button-apdung">ÁP DỤNG</button>
            </div>
        </div>
        <div class="column right">
            <div class="grid-container">
                @foreach (var item in Model)
                {
                    //var link = "/chi-tiet/" + item.name + "-" + item.id;
                    if (item.quantity > 0)
                    {


                        <div>
                            <a href="#"><img src=@item.u_image class="image-product" /></a>
                            <p>@item.name </p>
                            @{if (item.ListPrice.Count() > 1)
                                {
                                    <p class="price-product">@item.ListPrice[0] ~ @item.ListPrice[item.ListPrice.Count() - 1] </p>
                                }
                                else
                                {
                                    <p class="price-product">@item.price</p>
                                }
                            }

                        </div>
                    }

                }

