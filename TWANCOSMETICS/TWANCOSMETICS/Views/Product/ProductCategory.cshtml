    </section>
    @if (ViewBag.TotalPage > 1)
    {
        var pageDisplay = (int)ViewBag.MaxPage;
        int totalPage = (int)ViewBag.TotalPage;
        int currentPage = ((int)ViewBag.Page);
        var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
        var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

        <div class="pagination">
            <ul class="pagination">
                @if (currentPage > ViewBag.First)
                {
                    <li><a href="#" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                    <li>
                        <a href="#" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                    </li>
                    for (int i = startPageIndex; i <= endPageIndex; i++)
                    {
                        if (currentPage == i)
                        {
                            <li> <a href="#" class="active" title="Trang @i">@i</a></li>

                        }
                        else
                        {
                            <li><a href="#" title="Trang @i" class="pos">@i</a></li>
                        }
                    }
                    if (currentPage < totalPage)
                    {
                        <li><a href="#" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                        <li> <a href="#" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
                    }
                }
            </ul>
        </div>
    }
