
@{
    ViewBag.Title = "NavigationMenu";
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Navigation Menu</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Styles/Css/HomePage.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

</head>
<body>
    <header data-spy="affix" style="background-color:white">
        @{
            var u = Session["Account"] as TWANCOSMETICS.Models.User;
        }
        <img class="logo" src="../Images/Logo.svg">
        <div class="heading1">
            CỬA HÀNG TRỰC TUYẾN 24/7 - GIAO HÀNG NHANH CHÓNG
        </div>
        @using (Html.BeginForm("Search", "Product", FormMethod.Get, new { @class = "thanhtimkiem" }))
        {

            <input class="timkiemsp" type="search" name="keyword" id="mySearch" onkeyup="myFunction()" placeholder="Tìm kiếm sản phẩm" title="Type in a category" />
            <button type="button" class="material-symbols-outlined" id="icon-search" name="keyword" onkeyup="myFunction()" value="Search">
                search
            </button>
        }
        <div class="icon2">
            <button class="material-symbols-outlined" id="icon">
                shopping_cart
            </button>
            @{
                if (u != null)
                {
                    <div class="accountBtn">
                        <button class="material-symbols-outlined" name="loginBtn" id="icon">
                            account_circle
                            <div class="dropdown-content" id="content">
                                @Html.ActionLink("Thay đổi thông tin", "InfoManagement", "Account")
                                <a href="#">Đơn hàng</a>
                                @Html.ActionLink("Đăng xuất", "Logout", "Account")
                            </div>
                        </button>
                    </div>


                }
                else
                {

                    @Html.ActionLink("account_circle", "Login", "Account", new { area = "" }, new { @class = "material-symbols-outlined", id = "icon" })
                }
            }
            @*@{
                    if (u != null)
                    {
                        <p>Wellcome: @u.fullname</p>
                    }
                }*@

            @*<button class="material-symbols-outlined" id="icon">
                    account_circle
                </button>*@
        </div>
        <nav>
            <ul>
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li>
                    @Html.ActionLink("Sản phẩm", "Index", "Product")
                </li>
                <li><a href="#khuyenmai">Khuyến mãi</a></li>
                <li><a href="#kienthuc">Kiến thức chăm sóc da</a></li>
                <li><a href="#lienhe">Liên hệ </a></li>
            </ul>
        </nav>
    </header>
</body>

</html>